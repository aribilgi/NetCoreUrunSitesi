@model News

@{
    ViewData["Title"] = Model.Name;
}

<div class="row featurette">
    <div class="col-md-7">
        <h2 class="featurette-heading fw-normal lh-1">@Model.Name</h2>
        <p class="lead">
            @Model.Description
        </p>
    </div>
    <div class="col-md-5">
        <img src="/Img/@Model.Image" alt="@Model.Name" title="@Model.Name" class="img-fluid" />
    </div>
</div>